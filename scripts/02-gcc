name=gcc
version=9.1.0

msg "$name -> $NATIVE_PREFIX"

build(){
	cd $name-${version:0}

	tar -xf $SRC_DIR/mpfr-4.0.2.tar.bz2 && mv mpfr-4.0.2 mpfr
	tar -xf $SRC_DIR/gmp-6.1.2.tar.bz2 && mv gmp-6.1.2 gmp
	tar -xf $SRC_DIR/mpc-1.1.0.tar.gz && mv mpc-1.1.0 mpc	

	mkdir build && cd build

	../configure --prefix=${NATIVE_PREFIX} \
		--disable-nls \
		--enable-languages=c \
		--disable-multilib
	make 
	make install
}
